{
    "compilerOptions": {
        "target": "es5",
        "lib": ["es2015", "dom"],
        "module": "commonjs",
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "allowSyntheticDefaultImports": true,
        "noImplicitAny": false,
        "noEmitOnError": true,
        "removeComments": true,
        "noResolve": false,
        "sourceMap": true,
        "allowJs": true
    }
}
